<h1>Eat-Da-Burger!</h1>



<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
<div class="picture">
    <img class="krabbyPatty" width="200px" src="./assets/krabbyPatty.png"> <br>
</div>

<div class="burgersDevoured">
<h2>Burgers Devoured</h2>
</div>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h3>Add a Burger</h3>


<form class="create-form">

  <div class="form-group-1">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div class="form-group-2">
    <label for="currentBurger">Your Burger</label><br>
    <input type="radio" name="currentBurger" value="1" checked> Burger Time!<br>
  
  </div>

  <button type="submit">Add Your Burger!</button>
</form>
